<% @products.each do |p| %>
    <div>
        <%= image_tag p.photo || 'http://tmp.dzunion.cn/logo.png' %>
        <h3>
            <%= p.name %>
        </h3>
        <div>
            <span>
                市场零售价: <%= p.market_price %>
            </span>
        </div>
        <div>
            <span>
                规格: <%= p.weight %>
            </span>
            <span>
                箱规: <%= p.specification %>
            </span>
        </div>

        <% if current_user.present? %>
            <div>
                <span><%= link_to 'Show', p %></span>
                <span><%= link_to 'Edit', edit_product_path(p) %></span>
                <span><%= link_to 'Destroy', p, method: :delete, data: { confirm: 'Are you sure?' } %></span>

            </div>
        <% end %>
    </div>
    <% end %>
<%= will_paginate @products %>
