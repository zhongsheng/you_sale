<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name %>
  </div>
  <div class="field">
      <%= form.label :market_price %>
      <%= form.text_field :market_price %>
  </div>
  <div class="field">
      <%= form.label :wholesale_price %>
      <%= form.text_field :wholesale_price %>
  </div>
  <div class="field">
      <%= form.label :category %>
      <%= form.select :category_id, Category.all.collect {|cata| [cata.name, cata.id]} %>
  </div>

  <div class="field">
      <%= form.label :contry %>
      <%= form.select :contry_id, Contry.all.collect {|cata| [cata.name, cata.id]} %>
  </div>
  <div class="field">
    <%= form.rich_text_area :content %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
